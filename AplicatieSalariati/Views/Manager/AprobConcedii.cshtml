@model IEnumerable<AplicatieSalariati.Models.ConcediileModel>
@{
    ViewBag.Title = ViewBag.Type;
}
<h2>Concedii</h2>

@using (Html.BeginForm("AprobConcedii", "Administrator", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nume)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prenume)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dataStart)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataFinal)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    @Html.HiddenFor(modelItem => item.CNP);
                    @Html.HiddenFor(modelitem => item.id);
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nume)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prenume)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dataStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataFinal)
                        </td>
                        <td class="text-right">
                            <a type="submit" href="@Html.Action("AprobaConcedii", "Administrator" , new { id = item.id })" class="btn btn-primary" aria-label="left align">
                                    <span>Aproba</span>
                                </a>
                            @*<%=@Html.ActionLink("Aproba", "AprobaConcedii", "Manager", new { id = item.id }, null) %>*@
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}